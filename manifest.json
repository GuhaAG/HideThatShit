{
  "manifest_version": 2,

  "name": "HideThatShit",
  "description": "This extension allows the user to hide content based on keywords",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "HideThatShitPopup.html",
    "default_title": "Click here!"

  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
